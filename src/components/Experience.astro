<section id="experience" class="max-w-[1000px] mx-auto px-6 sm:px-12 py-24">
  <!-- Section Heading -->
  <div class="flex items-center gap-4 mb-12">
    <h2 class="text-3xl font-bold text-lightest-slate font-mono whitespace-nowrap">
      <span class="text-green">02.</span> Professional Impact
    </h2>
    <div class="h-[1px] bg-lightest-navy w-full max-w-xs"></div>
  </div>

  <!-- Professional Project Cards -->
  <div class="space-y-6">
    
    <!-- Card 1: Physics Mind Boggler - Startup Strategy & Growth -->
    <div class="group bg-light-navy p-6 rounded-lg border border-lightest-navy hover:border-green hover:-translate-y-1 transition-all duration-300">
      <!-- Title -->
      <h3 class="text-xl font-semibold text-lightest-slate mb-2">
        Startup Strategy & Growth
      </h3>
      
      <!-- Subtitle -->
      <p class="text-slate text-sm mb-1">
        Physics Mind Boggler: An EdTech startup specializing in competitive exam preparation for higher education in India
        <a href="https://physicsmindboggler.co/" target="_blank" rel="noopener noreferrer" class="text-green hover:underline ml-1 text-xs inline-flex items-center gap-0.5">
          ↗ Visit Site
        </a>
      </p>
      <p class="text-green text-xs font-mono mb-4">
        Feb 2025 — June 2025
      </p>
      
      <!-- Highlight -->
      <div class="mb-4 p-4 bg-green/10 rounded border-l-4 border-green">
        <p class="text-lightest-slate font-semibold mb-2">
          Optimized the researcher acquisition funnel by transitioning from cold-mailing to targeted LinkedIn outreach, increasing conversion from 1% → 30% for a pilot group of 100 candidates
        </p>
      </div>
      
      <!-- Details -->
      <div class="space-y-3 text-slate mb-4">
        <div class="flex gap-3">
          <span class="text-green mt-1">▹</span>
          <span>Owned end-to-end expert onboarding project from strategy to execution</span>
        </div>
        <div class="flex gap-3">
          <span class="text-green mt-1">▹</span>
          <span>Built Excel/Zoho CRM dashboards to track KPI bottlenecks and optimize conversion metrics</span>
        </div>
        <div class="flex gap-3">
          <span class="text-green mt-1">▹</span>
          <span>Conducted 100+ interviews to understand researcher motivations and pain points</span>
        </div>
        <div class="flex gap-3">
          <span class="text-green mt-1">▹</span>
          <span>Shifted strategy from automated emails to targeted LinkedIn outreach based on primary market research</span>
        </div>
      </div>
      
      <!-- Impact Badges -->
      <div class="flex flex-wrap gap-2">
        <span class="text-xs font-mono text-green bg-green/10 px-3 py-1 rounded border border-green/30">
          30x Conversion Improvement
        </span>
        <span class="text-xs font-mono text-green bg-green/10 px-3 py-1 rounded border border-green/30">
          16 Experts Onboarded
        </span>
        <span class="text-xs font-mono text-green bg-green/10 px-3 py-1 rounded border border-green/30">
          4 Successfully Placed
        </span>
      </div>
    </div>

    <!-- Card 2: Fraunhofer IPT Hackathon - Industrial Innovation -->
